<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SchoolTermTracker.Views.ViewReportPage"
             Title="View Report">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0">
            <CollectionView x:Name="collectionView">
                <CollectionView.Header>
                    <Grid 
                        ColumnDefinitions="*,*,*" 
                        Padding="0,10,0,20">
                        <Label Text="Name" Grid.Column="0" />
                        <Label Text="Start and End" Grid.Column="1" />
                        <Label Text="Status" Grid.Column="2" />
                    </Grid>
                </CollectionView.Header>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid 
                            ColumnDefinitions="*,*,*"
                            Padding="10,10,10,10">
                            <Label
                                Text="{Binding Name}"
                                Grid.Column="0" />
                            <Label
                                Text="{Binding CombinedDates}"
                                Grid.Column="1" />
                            <Label
                                 Text="{Binding Status}"
                                 Grid.Column="2" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>